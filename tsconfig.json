{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "jsx": "react-jsx",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "baseUrl": "./src",
      "paths": {
        "*": ["src/*"]
      },
      "moduleResolution": "node"
    },
    "include": [
      "src",
      "src/test",
      "src/test/**/*.test.tsx"
    ]
}